pipeline {
    agent { label 'k8s-label' }

    stages {
        stage('clone') {
            steps {
                    echo "clone repo"
                    checkout scm  
                 
            }
        }
        stage('Build') {
            steps {
                 dir('django') {
                    echo " Build docker images"
                    sh "docker build -t devopsjuly22017/django-web ."
                    sh "docker push devopsjuly22017/django-web:latest"
                 }
            }
        }
        stage('deploy') {
            steps {
                  echo "deploy django app  into k8s"
                  dir('django/k8s') {
                    sh "kubectl delete -f django.yml"
                    sh "kubectl apply -f django.yml"
                  }
            }
        }
    }
}
